<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mobile.client.gentree.gentreemobile.screen.AppWelcome" tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordField"
            android:singleLine="true"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/loginField" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/loginField" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/loginField"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/loginField"
            style="@style/Widget.AppCompat.EditText" android:singleLine="true"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="16dp"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/LabelLogin"/>
    <Button
            android:text="@string/label_connect"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:id="@+id/loginButton"
            android:onClick="connect"
            tools:layout_constraintTop_creator="1" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordField" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/passwordField"/>
    <TextView
            android:text="@string/label_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LabelLogin"
            tools:layout_constraintTop_creator="1" android:layout_marginTop="111dp"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="@+id/loginField"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/label_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/LabelPass"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toTopOf="@+id/passwordField"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="@+id/passwordField"/>

</android.support.constraint.ConstraintLayout>

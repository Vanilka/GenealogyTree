<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">


    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/noname_male"
            android:id="@+id/photoRight"
            android:layout_marginStart="41dp"
            android:layout_alignTop="@+id/photoLeft"
            android:layout_toEndOf="@+id/photoType"/>

    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/noname_female"
            android:layout_marginStart="39dp"
            android:layout_marginTop="30dp"
            android:id="@+id/photoLeft"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/type_neutral"
            android:layout_marginTop="30dp"
            android:id="@+id/photoType"
            android:layout_alignTop="@+id/photoRight"
            android:layout_toEndOf="@+id/photoLeft"
            android:layout_marginStart="58dp"/>
</RelativeLayout>
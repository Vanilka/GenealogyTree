<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mobile.client.gentree.gentreemobile.screen.AppWelcome">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordField"
            android:singleLine="true"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/loginField" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/loginField" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/loginField" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/loginField"
            style="@style/Widget.AppCompat.EditText" android:singleLine="true"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="127dp"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.573"/>
    <Button
            android:text="Login"
            android:layout_width="212dp"
            android:layout_height="49dp"
            android:id="@+id/loginButton"
            tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1" android:layout_marginBottom="144dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.563"
            android:onClick="connect"/>
    <TextView
            android:text="Login: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LabelLogin" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/loginField" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/loginField"/>
    <TextView
            android:text="Password : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/LabelPass"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toTopOf="@+id/passwordField"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="@+id/passwordField"
    />
    <TextView
            android:text="TextView"
            android:layout_width="281dp"
            android:layout_height="43dp" android:id="@+id/errorLabel" tools:layout_editor_absoluteY="378dp"
            tools:layout_editor_absoluteX="69dp"/>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane id="dialogAddChildren" fx:id="dialoAddChildren" minHeight="700" minWidth="700" styleClass="dialog-pane"
            xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gentree.client.desktop.controllers.screen.DialogAddChildrenController">
    <stylesheets>
        <URL value="@/layout/style/gentreestyle.css"/>
    </stylesheets>
    <children>
        <AnchorPane styleClass="contentPane" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="20"
                    AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
            <children>

                <VBox alignment="TOP_CENTER" layoutX="40.0" layoutY="40.0">
                    <children>
                        <Label prefHeight="33.0" prefWidth="252.0" text="%label_mother"/>
                        <AnchorPane fx:id="motherPane" maxHeight="145.0" maxWidth="255.0" minHeight="145.0"
                                    minWidth="255.0" prefHeight="145.0" prefWidth="255.0"/>
                    </children>
                </VBox>


                <VBox alignment="TOP_CENTER" layoutX="350.0" layoutY="40.0">
                    <children>
                        <Label prefHeight="33.0" prefWidth="254.0" text="%label_father"/>
                        <AnchorPane fx:id="fatherPane" maxHeight="145.0" maxWidth="255.0" minHeight="145.0"
                                    minWidth="255.0" prefHeight="145.0" prefWidth="255.0"/>
                    </children>
                </VBox>
                <AnchorPane fx:id="relationTypePane" layoutX="290" layoutY="220"/>
                <ScrollPane styleClass="dottedPane, transparentPane"
                            layoutX="40.0" layoutY="330.0"
                            AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="40.0"
                            AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="330.0">
                    <content>
                        <FlowPane fx:id="childrenFlowPane"
                                  hgap="20.0" vgap="20.0"
                                  prefHeight="279.0" prefWidth="580.0"/>
                    </content>
                </ScrollPane>
            </children>
            <opaqueInsets>
                <Insets left="10.0" right="10.0"/>
            </opaqueInsets>
        </AnchorPane>
        <JFXButton fx:id="buttonCancel" buttonType="RAISED" layoutX="100" onAction="#cancel" prefHeight="30.0"
                   prefWidth="120.0" styleClass="button" text="%cancel" AnchorPane.bottomAnchor="10.0"/>
        <JFXButton fx:id="buttonConfirm" buttonType="RAISED" layoutX="280" onAction="#confirm" prefHeight="30.0"
                   prefWidth="120.0" styleClass="button" text="%create" AnchorPane.bottomAnchor="10.0"/>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import gentree.client.visualization.controls.HeaderPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import java.net.URL?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<AnchorPane id="paneShowInfoSim" fx:id="paneShowInfoSim" styleClass="contentPane" AnchorPane.bottomAnchor="30"
            AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="30"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gentree.client.desktop.controllers.screen.PaneShowInfoSim">
    <stylesheets>
        <URL value="@/layout/style/gentreestyle.css"/>
    </stylesheets>
    <children>
        <HeaderPane id="sim-info-header" fx:id="HEADER_PANE" text="%header_info_sim" AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0"/>
        <ScrollPane minHeight="300" minWidth="200" styleClass="transparentPane" AnchorPane.bottomAnchor="20.0"
                    AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="20.0">
            <content>
                <AnchorPane fx:id="CONTENT_PANE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <JFXTextField fx:id="SIM_ID_FIELD" labelFloat="true"
                                      prefHeight="33.0"
                                      prefWidth="50.0" promptText="ID" styleClass="jfx-text-always-focused"
                                      AnchorPane.topAnchor="40.0"
                                      AnchorPane.leftAnchor="30.0"/>
                        <Pane maxHeight="170.0" maxWidth="145.0" minHeight="141.0" minWidth="145.0" prefHeight="141.0"
                              prefWidth="145.0" AnchorPane.leftAnchor="55.0" AnchorPane.topAnchor="25.0">
                            <children>
                                <Circle fx:id="SIM_PHOTO" id="sim_photo" onMouseClicked="#choosePhoto"
                                        styleClass="avatar-shape"
                                        layoutX="73.0" layoutY="71.0" radius="64.0"/>
                                <ComboBox fx:id="SIM_RACE_CB" id="sim_race_combo_box" styleClass="combobox, no-opacity"
                                          layoutX="100" layoutY="100"
                                prefWidth="60" prefHeight="50"
                                          minWidth="60" minHeight="60"
                                          maxWidth="60" maxHeight="60"
                                />
                            </children>
                        </Pane>

                        <JFXTextField fx:id="SIM_NAME_FIELD" labelFloat="true" layoutX="30.0" layoutY="190.0"
                                      prefHeight="25.0" prefWidth="193.0" promptText="%sim_name"
                                      styleClass="jfx-text-always-focused"/>
                        <JFXTextField fx:id="SIM_SURNAME_FIELD" labelFloat="true" layoutX="30.0" layoutY="240.0"
                                      prefHeight="25.0" prefWidth="193.0" promptText="%sim_surname"
                                      styleClass="jfx-text-always-focused"/>
                        <JFXTextField fx:id="SIM_BORNNAME_FIELD" labelFloat="true" layoutX="30.0" layoutY="290.0"
                                      prefHeight="25.0" prefWidth="193.0" promptText="%sim_born_name"
                                      styleClass="jfx-text-always-focused"/>


                        <JFXToggleButton fx:id="TOGGLE_IS_ALIVE" styleClass="no-opacity" layoutX="30" layoutY="310" prefHeight="30.0"/>
                        <AnchorPane fx:id="DEATH_CAUSES_PANE" layoutX="30.0" layoutY="350" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="0">
                            <children>
                                <Label prefHeight="25.0" prefWidth="100.0"  text="Death Cause"
                                       styleClass="label1">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Label>
                                <ComboBox fx:id="SIM_DEATH_CAUSE"  layoutY="30.0" prefHeight="41.0"
                                          styleClass="combobox, no-opacity"
                                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
                            </children>
                        </AnchorPane>

                        <JFXButton fx:id="RETURN_BUTTON" buttonType="RAISED" layoutY="500.0" onAction="#returnAction"
                                   prefWidth="100.0" text="%return" AnchorPane.leftAnchor="50"
                                   AnchorPane.rightAnchor="50"/>
                        <JFXButton fx:id="MODIFY_BUTTON" buttonType="RAISED" layoutY="450.0" onAction="#modifyAction"
                                   prefWidth="100.0" text="%modify" AnchorPane.leftAnchor="50"
                                   AnchorPane.rightAnchor="50"/>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
